{
  "name": "react-native-heartpy",
  "version": "0.1.0",
  "description": "React Native bindings for a HeartPy-like C++ core (HR/HRV analysis)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "android",
    "ios",
    "cpp",
    "third_party",
    "react-native.config.js"
  ],
  "keywords": [
    "react-native",
    "heart",
    "hrv",
    "ppg",
    "ecg",
    "jsi"
  ],
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.24.5"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "test": "jest"
  },
  "codegenConfig": {
    "name": "HeartPyModule",
    "type": "modules",
    "jsSrcsDir": "./src/specs",
    "includesGeneratedCode": true,
    "android": {
      "javaPackageName": "com.heartpy"
    },
    "ios": {
      "libraryName": "HeartPy",
      "podspecPath": "ios/HeartPy.podspec"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^24.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react-native": ">=0.71.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
